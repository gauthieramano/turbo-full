{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "@lynx-js/react",

		"module": "preserve",
		"moduleResolution": "bundler",
		"target": "ESNext",

		"strict": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["dist/"]
}
